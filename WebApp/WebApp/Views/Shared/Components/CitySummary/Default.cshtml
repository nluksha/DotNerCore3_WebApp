@model CityViewModel

<table class="table table-ms table-bordered text-white bg-@ViewBag.Theme">
    <thead>
        <tr>
            <th colspan="2">Cities Summary</th>
        </tr>
    </thead>
    <tbody>
        <tr>
            <td>Cities:</td>
            <td class="text-right">@Model.Cities</td>
        </tr>
        <tr>
            <td>Population:</td>
            <td class="text-right">@Model.Population.ToString("#,###")</td>
        </tr>
    </tbody>
</table>