@page "/pages/form/{id:long?}"
@model WebApp.Pages.FormHandlerModel

<div class="m-2">
    <h5 class="bg-primary text-white text-center p-2">Html Form</h5>

    <form id="htmlform" asp-page="FormHandler" method="post">
        <div class="form-froup">
            <label>Name</label>
            <input class="form-control" name="Name" value="@Model.Product.Name" />
        </div>

        <button type="submit" class="btn btn-primary mt-2">Submit</button>
    </form>

    <button form="htmlform" asp-page="FormHandler" class="btn btn-primary mt-2">Submit (Outside)</button>
</div>
